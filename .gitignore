cat > .gitignore <<'EOF'
# Python
venv/
.env
__pycache__/
*.pyc
.mypy_cache/
.pytest_cache/
dist/
build/

# Node / Frontend
node_modules/
.cache/
.next/
out/
dist/
build/
*.log

# Playwright / drivers / browsers baixados
playwright/.cache/
**/playwright/.cache/
**/playwright/driver/
EOF

# Desindexar caso ainda estejam rastreados
git rm -r --cached venv node_modules 2>/dev/null || true
git add .gitignore
git commit -m "chore: ignore venv & node_modules"
git push origin main
